@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户列表</title>
    <link href="~/Content/layui/css/layui.css?v=12" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css?v=3" rel="stylesheet" />
    <link href="~/Content/framework/css/touch-screen.css?v=12" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <style>
        .my-buton-group {
            width: 100%;
            text-align: center;
        }

        .my-buton {
            height: 38px;
            width: 10%;
        }

        .layui-layer-btn0 {
            display: none !important;
        }

        .layui-layer-btn1 {
            display: none !important;
        }

        .nei-rong {
            max-width: 200px;
            min-width: 200px;
            word-wrap: break-word;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        nei-rong:hover {
            white-space: normal;
            overflow: auto;
            background-color: #b6384f;
            color: white;
        }


        btn-return {
            position: absolute;
            top: -15px;
            right: -15px;
            width: 80px;
            height: 80px;
        }

        .layui-layer-setwin .layui-layer-close1 {
            background-position: 10px -40px;
            cursor: pointer;
        }

        .layui-btn-normal {
            box-shadow: none !important;
            /*color: #8f2b3f;*/
        }
    </style>
</head>

<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <div id="toolbar" class="elight-table-toolbar">
                <div class="layui-btn-group my-buton-group">
                    <button id="btn_kf_xy" class="layui-btn layui-btn-normal my-buton">
                        口服药
                    </button>
                    <button id="btn_wy_xy"  class="layui-btn layui-btn-normal my-buton">
                        外用药
                    </button>
                    <button id="btn_zs_xy"  class="layui-btn layui-btn-normal my-buton">
                        注射药
                    </button>

                </div>

            </div>
            <table id="gridList" class="layui-form layui-table table-hover elight-table" lay-skin="line">
                <thead>
                    <tr>
                        <th class="td-num">序号</th>
                        @*<th style="width:10%">分类</th>*@
                        <th style="width:25%">名称（规格）</th>
                        <th style="width:10%;text-align:center;">单位</th>
                        <th style="width:10%;text-align:center;">剂型</th>
                        <th style="width:15%">生产厂家</th>
                        <th style="width:10%;text-align:right;">价格</th>
                        <th style="width:10%">医保范围</th>
                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
            </table>
            <div id="paged"></div>
        </div>
    </div>
</body>
</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
    {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td style="text-align:center;">{{item.RN}}</td>
        @*<td>{{item.FL}}</td>*@
        <td title="{{item.SUNAMEK_SPC}}">{{item.SUNAMEK_SPC}}</td>
        <td style="text-align:center;">{{item.UNIT}}</td>
        <td style="text-align:center;">{{item.JIXING}}</td>
        <td title="{{item.MAKER}}">{{item.MAKER}}</td>
        <td style="text-align:right">{{item.BOAMT_VALUE}}</td>
        <td>{{item.YBFW}}</td>

    </tr>
    {{#  }); }}
    {{# if(d.list.length<=0) { }}
    <tr style="color: red">
        <td colspan="8">查无数据。</td>
    </tr>
    {{# } }}
</script>

<script type="text/javascript">

    var paging, layer;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        layer = parent.layer || layui.layer;
        var form = layui.form();
        paging = layui.paging();
        initGrid();
        $('#btn_kf_xy').click(btn_kf);
        $('#btn_wy_xy').click(btn_wy);
        $('#btn_zs_xy').click(btn_zs);
        keyWord = 'btn_kf_xy';
        initGrid();
    });

    function close_layer() {
        layer.closeAll();
    }


    var keyWord = '';

    function btn_kf() {
        keyWord = 'btn_kf_xy';
        initGrid();
    }

    function btn_wy() {
        keyWord = 'btn_wy_xy';
        initGrid();
    }

    function btn_zs() {
        keyWord = 'btn_zs_xy';
        initGrid();
    }



    function initGrid() {
        $("button").removeClass("btn-active");
        $("#" + keyWord).toggleClass("btn-active")
        paging.init({
            url: '/TouchScreen/DrugInquiry/GetWesternMedicine',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: keyWord
            },
            pageConfig: {
                elem: '#paged',
                pageSize: 10,
                skip: false,
            },
            success: function () {

            }
        });
    }



</script>
