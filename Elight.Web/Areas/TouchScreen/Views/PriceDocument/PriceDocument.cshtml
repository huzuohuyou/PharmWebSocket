<script type="text/javascript">

    var paging, layer;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
         layer = parent.layer || layui.layer;
        var form = layui.form();
        paging = layui.paging();
        initGrid();
        //$('#jccl').click(btn_jccl); 
        });

    function close_layer() {
        layer.closeAll();
    }


    var keyWord = '';

    function btn_jccl() {
        initGrid();
    }

    function initGrid() {
        var a = this.id;
        paging.init({
            url: '/TouchScreen/PriceDocument/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: $.getQueryString("keyWord")
            },
            pageConfig: {
                elem: '#paged',
                pageSize: 10,
                skip: false,
            },
            success: function () {

            }
        });
    }

    function btn_xxxx(WJBM, WJNO, WJMC) {

        $.layerOpen({
            id: "ere",  
            title: "文件内容",  
            width: "80%",
            height: "100%",
            content: "/TouchScreen/PriceDocument/Form?WJBM=" + WJBM + "&WJNO=" + WJNO + "&WJMC=" + WJMC,
            btn: []
        });
    } 

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) {

            return decodeURI(r[2]);//修改之后  
        } else { return null; }
    }

    function display(td) {
        $(td).parent().parent().find("tr td").removeAttr("title")
        $(td).attr("title", td.innerText) 
    }

</script>
