    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <style>
        .my-buton-group {
            width: 100%;
            text-align: center;
        }

        .my-buton {
            height: 38px;
            width: 10%;
        }

        .layui-layer-btn0 {
            display: none !important;
        }

        .layui-layer-btn1 {
            display: none !important;
        }

        .nei-rong {
            max-width: 200px;
            min-width: 200px;
            word-wrap: break-word;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        nei-rong:hover {
            white-space: normal;
            overflow: auto;
        }


