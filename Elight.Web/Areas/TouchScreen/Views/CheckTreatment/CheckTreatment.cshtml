<script type="text/javascript">

    var paging, layer;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        layer = parent.layer || layui.layer;
        var form = layui.form();
        paging = layui.paging();
        initGrid();
        $('#zl').click(btn_zl);
        $('#cgjc').click(btn_cgjc);
        $('#dgzl').click(btn_dgzl);
        $('#zyzl').click(btn_zyzl);
        $('#fckzl').click(btn_fckzl);
        $('#pkzl').click(btn_pkzl);
        $('#wgzl').click(btn_wgzl);
        $('#fs').click(btn_fs);

        keyWord = 'zl';
        initGrid();
        });

    function close_layer() {
        layer.closeAll();
    }

    var keyWord = '';

    function btn_zl() {
        keyWord = 'zl';
        initGrid();
        
    }

    function btn_cgjc() {
        keyWord = 'cgjc';
        initGrid();
    }

    function btn_dgzl() {
        keyWord = 'dgzl';
        initGrid();
    }

    function btn_zyzl() {
        keyWord = 'zyzl';
        initGrid();
    }

    function btn_fckzl() {
        keyWord = 'fckzl';
        initGrid();
    }

    function btn_pkzl() {
        keyWord = 'pkzl';
        initGrid();
    }

    function btn_wgzl() {
        keyWord = 'wgzl';
        initGrid();
    }

    function btn_fs() {
        keyWord = 'fs';
        initGrid();
    }

    function initGrid() {
        $("button").removeClass("btn-active");
        $("#" + keyWord).toggleClass("btn-active")
        
        paging.init({
            url: '/TouchScreen/CheckTreatment/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: keyWord
            },
            pageConfig: {
                elem: '#paged',
                pageSize: 10,
                skip:false,
            },
            success: function () {

            }
        });
    }

    function btn_detail(BCODE) {
        console.log(BCODE)
        $.layerOpen({
            id: "add",
            title: "详细信息",
            width: "670px",
            height: "100%",
            content: "/TouchScreen/CheckTreatment/Detail?BCODE=" + BCODE,
            btn: []
        });
    }
    

</script>
