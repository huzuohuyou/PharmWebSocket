<!--内容模板-->

<script type="text/javascript">

    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        var layer = parent.layer || layui.layer;
        paging = layui.paging();
        $('#btn_jczl').click(btn_jczl);
        $('#btn_bljy').click(btn_bljy);
        $('#btn_shshu').click(btn_shshu);
        $('#btn_pycx').click(btn_pycx);
    });

    function btn_jczl() {
        $.layerOpen({
            id: "edit",
            title: "检查治疗",
            width: "90%",
            height: "100%",
            content: "/TouchScreen/CheckTreatment/CheckTreatment",
            btn: []
        });
    }

    function btn_bljy() {
        $.layerOpen({
            closeBtn:0,
            id: "edit",
            title: "病理检验",
            width: "90%",
            height: "100%",
            content: "/TouchScreen/CheckTreatment/PathologicalExamination",
            btn: []
        });
    }

    function btn_shshu() {
        $.layerOpen({
            id: "edit",
            title: "手术",
            width: "90%",
            height: "100%",
            content: "/TouchScreen/CheckTreatment/Surgery",
            btn: []
        });
    }

    function btn_pycx() {
        $.layerOpen({
            id: "edit",
            title: "拼音",
            width: "90%",
            height: "100%",
            content: "/TouchScreen/PinYin/Index",
            btn: []
        });
    }


</script>
